<UserControl
    x:Class="XINGYI_QIAN_FinalApp.UDPControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XINGYI_QIAN_FinalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Width="150" Height="50" Text="UDP CONNECT" FontSize="20" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center"/>
        <Grid x:ConnectionId='1'  x:Name="udpGrid" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:ConnectionId='2' x:Name="sendButton" Content="Connect"  Width="120" Grid.Column="1" Grid.Row="1"                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Your IP:" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='3' x:Name="LocalIPBox" Grid.Column="1" Grid.Row="2"  FontWeight="Bold" FontStyle="Italic" TextWrapping="WrapWholeWords" ScrollViewer.VerticalScrollMode="Auto"/>
            <TextBlock Grid.Column="0" Grid.Row="3" Text="Partner's IP:" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='4' x:Name="PartIPBox" Grid.Column="1" Grid.Row="3"  FontWeight="Bold" FontStyle="Italic" TextWrapping="WrapWholeWords" ScrollViewer.VerticalScrollMode="Auto"/>
            <TextBlock Grid.Column="0" Grid.Row="4" FontWeight="Bold" FontStyle="Italic" Text="Public key:" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='5' x:Name="keyBox" Width="300" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" FontWeight="Bold" FontStyle="Italic" TextWrapping="WrapWholeWords" ScrollViewer.VerticalScrollMode="Auto"/>
            <TextBlock Grid.Column="0" Grid.Row="6" Text="Got public key:" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='6' x:Name="PartkeyBox" Width="300" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" FontWeight="Bold" FontStyle="Italic" TextWrapping="WrapWholeWords" ScrollViewer.VerticalScrollMode="Auto"/>
        </Grid>
    </Grid>
</UserControl>

